    <%= image_tag('logo.png', size: '30x24' ,class: "d-inline-block align-text-top") %>
      Tweeets
    </a>
    <form class="d-flex">
      <% if current_user %>
      
        <%= current_user.email %>
        <%= link_to "Home",root_path, class:"mx-3" %>
        <%= link_to "Posts",posts_path, class:"mx-3" %>
        <%= link_to "Users",pages_admin_path, class:"mx-3" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, data:{turbo_method: :delete} , class:"mx-3" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class:"mx-3" %>
