
  
<div class="d-flex justify-content-center m-0 p-0 row ">

<!-- column    1 -->
    
    <% if current_user  %>
    <div class="col-3 h-50 d-flex align-items-center g-0 row p-2" >
 
        <div class="col-3 mt-3">
            <% if current_user.image.attached? %>
                <%= image_tag(current_user.image, style: 'height:50px;border-radius:50px;width:50px;display:inline-block;' ,class: "shadow ") %>
            <% else %>
                <%= image_tag('logo.png', size: '40x40' ,class: "shadow ") %>
            <% end %>
        </div>
        <div class="col-9">
        
            <%= current_user ? current_user.email : '' %>
        </div>

        <div class="col-9 mt-3">
            <p class=""><%= @t_post %> Posts</p>
        </div>
        <div class="col-9 ">
            <p class="">108 Following</p>
        </div>
        <div class="col-9 ">
            <p class="">88 Followers</p>
        </div>
  
    </div>
    <% end %>


<!-- column 2(post and new post) -->
    <div class="col-6 bg-light d-flex align-items-center row " >

        <% if current_user && current_user.status == "pending" %>
            <h4 class="alert text-info "> We're reviewing your account and will get back to you shortly. <!h4>
        <% end %>

        <% if current_user  && current_user.status == "approved"%>

        <div class=" m-1  text-center" >
        <%= form_with(model: @post) do |form| %>
            
            <% if @post.errors.any? %>
            <div style="color: red">
                <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
        
                <ul>
                <% @post.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
                </ul>
            </div>
            <% end %>
    
                <div class="">
                    <%= form.label :title, style: "display: block" %>
                    <%= form.text_field :title, class: "rounded" %>
                </div>
            
                <div>
                    <%= form.label :content, style: "display: block" %>
                    <%= form.text_area :content, class: "rounded" %>
                </div>
            
                <div>
                    <%# form.label :user_id, style: "display: block" %>
                    <%= form.hidden_field :user_id, value: current_user.id %>
                </div>
            
                <div>
                    <%= form.submit class:"btn btn-info text-light my-2" %>
                </div>
            </div>
        <% end %>
    <% end %>



        <% @posts.each do |post| %>
            <div class="card m-1 shadow" >
            <div class="card-body">
                <h5 class="card-title"><%= post.user.email %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= post.created_at.strftime("%b %d,%Y at %I:%M %p") %></h6>
                <h6>Title : <%= post.title %></h6>
                <p class="card-text"><%= post.content %></p>
                <% if current_user && current_user.id == post.user_id %>
                    <%= link_to "Show", post , class:"card-link" %> |
                    <%= link_to "Edit", edit_post_path(post) %> |
                    <%= button_to "Del", post, method: :delete %>
                <% end %>
            </div>
            </div>
        <% end %>

    </div>

  
<!-- column 3 -->
    <% if current_user %>
        <div class="col-3 h-50 d-flex align-items-center row g-0 px-5 " >
    
            <div class="col-3 mt-3 ">
                <%= image_tag('logo.png', size: '40x40' ,class: "shadow ") %>
            </div>
            <div class="col-9 ">
            
                <%= current_user ? current_user.email : '' %>
            </div>
            <div class="col-9 mt-3 ">
                <p class="">0 Posts</p>
            </div>
            <div class="col-9 ">
                <p class="">108 Following</p>
            </div>
            <div class="col-9 ">
                <p class="">88 Followers</p>
            </div>

        </div>
    <% end %>

</div>




    
